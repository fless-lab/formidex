<div class="w-full max-w-md space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-foreground">Welcome to Formidex</h2>
      <p class="mt-2 text-center text-sm text-muted-foreground">Manage your forms with ease</p>
    </div>
    <form class="space-y-6" action="#" method="POST">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 sr-only" for="firstname">
            First Name
          </label>
          <input
            class="h-10 bg-background text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 relative block w-full appearance-none rounded-md border border-muted px-3 py-2 text-foreground placeholder-muted-foreground focus:z-10 focus:border-primary focus:outline-none focus:ring-primary sm:text-sm"
            id="firstname"
            autocomplete="given-name"
            required=""
            placeholder="First Name"
            type="text"
            name="firstname"
          />
        </div>
        <div>
          <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 sr-only" for="lastname">
            Last Name
          </label>
          <input
            class="h-10 bg-background text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 relative block w-full appearance-none rounded-md border border-muted px-3 py-2 text-foreground placeholder-muted-foreground focus:z-10 focus:border-primary focus:outline-none focus:ring-primary sm:text-sm"
            id="lastname"
            autocomplete="family-name"
            required=""
            placeholder="Last Name"
            type="text"
            name="lastname"
          />
        </div>
      </div>
      <div>
        <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 sr-only" for="email">
          Email address
        </label>
        <input
          class="h-10 bg-background text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 relative block w-full appearance-none rounded-md border border-muted px-3 py-2 text-foreground placeholder-muted-foreground focus:z-10 focus:border-primary focus:outline-none focus:ring-primary sm:text-sm"
          id="email"
          autocomplete="email"
          required=""
          placeholder="Email address"
          type="email"
          name="email"
        />
      </div>
      <div>
        <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 sr-only" for="password">
          Password
        </label>
        <input
          class="h-10 bg-background text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 relative block w-full appearance-none rounded-md border border-muted px-3 py-2 text-foreground placeholder-muted-foreground focus:z-10 focus:border-primary focus:outline-none focus:ring-primary sm:text-sm"
          id="password"
          autocomplete="current-password"
          required=""
          placeholder="Password"
          type="password"
          name="password"
        />
      </div>
  
      <div>
        <h3 class="text-lg font-medium text-foreground">Organization</h3>
        <div class="mt-2 space-y-4">
          <div class="flex items-center">
            <input id="join-existing" name="organization" type="radio" value="existing" class="h-2 w-2 border-foreground focus:ring-primary" checked>
            <label for="join-existing" class="ml-3 block text-sm font-medium text-foreground">&nbsp;Join an existing organization</label>
          </div>
          <div class="flex items-center">
            <input id="create-new" name="organization" type="radio" value="new" class="h-2 w-2 border-foreground focus:ring-primary">
            <label for="create-new" class="ml-3 block text-sm font-medium text-foreground">&nbsp;Create a new organization</label>
          </div>
        </div>
  
        <div id="existing-org-select" class="mt-4">
          <label class="block text-sm font-medium text-foreground sr-only" for="organization-select">Select Organization</label>
          <select id="organization-select" name="organization" class="mt-1 block w-full rounded-md border border-muted bg-background py-2 px-3 text-sm shadow-sm focus:border-primary focus:ring-primary">
            <option>Select organization</option>
            <option>Organization 1</option>
            <option>Organization 2</option>
          </select>
        </div>

        <div id="new-org-input" class="mt-4 hidden">
            <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70 sr-only" for="email">
              Organization Name
            </label>
            <input
              class="h-10 bg-background text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50 relative block w-full appearance-none rounded-md border border-muted px-3 py-2 text-foreground placeholder-muted-foreground focus:z-10 focus:border-primary focus:outline-none focus:ring-primary sm:text-sm"
              id="new-organization"
              autocomplete="organization"
              required=""
              placeholder="New organization name"
              type="text"
              name="new_organization"
            />
          </div>
      </div>
  
      <div>
        <button class="mt-6 inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2 w-full" type="submit">
          Sign Up
        </button>
      </div>
    </form>
    <div class="text-center text-sm text-muted-foreground">
      Already have an account?
      <a class="font-medium text-primary hover:text-primary-foreground" href="/auth/login">Log in</a>
    </div>
  </div>
  
  <script>
    const existingOrgSelect = document.getElementById('existing-org-select');
    const newOrgInput = document.getElementById('new-org-input');
    const radioExisting = document.getElementById('join-existing');
    const radioNew = document.getElementById('create-new');
  
    radioExisting.addEventListener('change', function () {
      if (this.checked) {
        existingOrgSelect.classList.remove('hidden');
        newOrgInput.classList.add('hidden');
      }
    });
  
    radioNew.addEventListener('change', function () {
      if (this.checked) {
        existingOrgSelect.classList.add('hidden');
        newOrgInput.classList.remove('hidden');
      }
    });
  </script>
  